<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple To-Do App</title>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <header>
            <h1>List of Task New</h1>
            <p>Organize your tasks effectively</p>
        </header>

        <!-- Form to add new tasks -->
        <form action="/addtask" method="POST" class="task-form">
            <input type="text" name="newtask" placeholder="Add a new task" required>
            <button type="submit" class="add-button">Add Task</button>
        </form>

        <!-- Pending Tasks Section -->
        <section class="task-section">
            <h2>Pending Tasks</h2>
            <form action="/toggletask" method="POST" id="taskForm">
                <ul class="task-list">
                    <% for (let i = 0; i < task.length; i++) { %>
                        <li>
                            <label>
                                <input type="checkbox" name="check" value="<%= task[i].id %>" <% if (task[i].completed) { %> checked <% } %> onchange="this.form.submit();">
                                <span><%= task[i].name %></span>
                            </label>
                        </li>
                    <% } %>
                </ul>
            </form>
        </section>

        <!-- Completed Tasks Section -->
        <section class="completed-section">
            <h2>Completed Tasks</h2>
            <ul class="completed-list">
                <% for (let i = 0; i < complete.length; i++) { %>
                    <li class="completed-task">
                        <label>
                            <input type="checkbox" checked disabled>
                            <span><%= complete[i].name %></span>
                        </label>
                    </li>
                <% } %>
            </ul>
        </section>
    </div>
</body>
</html>
